                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module"
                      class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="module_rest_admin_api_status" id="input-status" class="restapi_status form-control">
                                {% if module_rest_admin_api_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-entry-key">
                      <span data-toggle="tooltip" title="" data-original-title="{{ text_secret_key }}">
                        {{ entry_key }}
                      </span>
                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" id="input-key" type="text" name="module_rest_admin_api_key" value="{{ module_rest_admin_api_key }}"
                                   required="required"/>
                            <br>
                            <button type="button" id="button-generate" class="btn btn-primary"><i class="fa fa-refresh"></i> {{ button_generate_api_key }}</button>
                        </div>
                    </div>
